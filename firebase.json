{
  "hosting": {
    "public": "dist",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "headers": [
      {
        "source": "/",
        "headers": [
          {
            "key": "Permissions-Policy",
            "value": "microphone=*"
          }
        ]
      },
      {
        "source": "/*",
        "headers": [
          {
            "key": "Permissions-Policy",
            "value": "microphone=*"
          }
        ]
      }
    ],
    "rewrites": [
      {
        "source": "**",
        "destination": "/index.html"
      }
    ]
  }
}